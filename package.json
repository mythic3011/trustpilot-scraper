{
  "name": "trustpilot-scraper",
  "version": "1.0.0",
  "description": "Web spider for extracting Trustpilot reviews to CSV",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest --run tests/unit",
    "test:property": "vitest --run tests/property",
    "test:integration": "vitest --run tests/integration"
  },
  "keywords": [
    "trustpilot",
    "scraper",
    "web-spider",
    "reviews"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^14.0.2",
    "csv-writer": "^1.6.0",
    "date-fns": "^4.1.0",
    "playwright": "^1.56.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "fast-check": "^4.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}